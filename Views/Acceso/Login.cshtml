
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="jQuery/jquery-3.1.1.min.js" type="text/javascript"></script>

    
    <script src="~/Scripts/js/Login.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body background="https://farm4.staticflickr.com/3940/32677535044_606bd74352_c.jpg" style="background-repeat:no-repeat;background-size:cover;">
    <br>
    <hr>
    <h1 align="center" style="color:#00cccc;">Login Aplicaciones Web</h1>
    <hr>
    <br>
    <form action="@Url.Action("Login","Acceso")" method="post">
        <center>
            <div id="circle">
                <h1 id="blinking" style="color: #00cccc; ">Introduzca sus Datos</h1>  @*//#0040FF*@@*#00cccc*@
                <div id="box">

                    <input type="text" name="Correo" class="form-control input_user" value="" placeholder="Correo">
                    <input type="password" name="Clave" class="form-control input_pass" value="" placeholder="Contraseña">
                    @*<input type="button" name="login" value="Login" id="inBtn" style="color:white;">*@ @*otro boton*@

                    @*uso razor para  mostrar mensaje de error y traer el mensaje  de error del login*@
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }

                    <button type="submit" name="button" class="btn login_btn">Iniciar Sesion</button>


                </div>
            </div>

            <div class="d-flex justify-content-center links">
                Desea Registrarse? <a href="@Url.Action("Registrar","Acceso")" class="ml-2">Registrarse</a>
            </div>


        </center>

    </form>

    <br><br><br><br>

    @*Creadores*@
    <!-- <hr>
        <p id="footer">Misfar ©</p>
    <hr> -->
    @*<footer>
            <hr>
            <p id="copy">Ayaal Shahim ©</p>
            <hr>
        </footer>*@

    <footer>
        <hr>
        <p id="copy">Facu©</p>
        <hr>
    </footer>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
